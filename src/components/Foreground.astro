---
import { siteLook } from '../config/site';
import { contactPlatforms, socialPlatforms } from '../config/socials';
import Button from './link/Button.astro';
---

<div class="pb-5 pt-5 min-[200px]:pt-0 flex items-center justify-center">
  <div class="mx-4 min-[350px]:mx-10 max-w-80 flex flex-col items-center gap-4">
    {
      siteLook.socialsHeading && (
        <p class="text-center text-balance text-lg min-[350px]:text-xl font-medium text-white select-none">
          {siteLook.socialsHeading}
        </p>
      )
    }
    {
      Object.keys(socialPlatforms).map((platform) => (
        <Button platform={platform} type="social" />
      ))
    }
    {
      siteLook.contactHeading && (
        <p class="text-center text-balance text-lg min-[350px]:text-xl font-medium text-white select-none">
          {siteLook.contactHeading}
        </p>
      )
    }
    {
      Object.keys(contactPlatforms).map((platform) => (
        <Button platform={platform} type="contact" />
      ))
    }
  </div>
</div>
